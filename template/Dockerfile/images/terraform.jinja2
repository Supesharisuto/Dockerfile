{% import 'Dockerfile/docker.jinja2' as docker %}

{% macro alpine(path="/usr/local/bin", version="1.3.3") -%}
    # Install packer
    && wget -O "{{ path }}/terraform" "https://releases.hashicorp.com/packer/1.3.3/packer_1.3.3_linux_amd64.zip" \
    && chmod +x "{{ path }}/terraform" \
    && "{{ path }}/terraform" --version
{%- endmacro %}

