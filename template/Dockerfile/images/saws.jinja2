{% import 'Dockerfile/docker.jinja2' as docker %}

{% macro alpine() -%}
    # Install saws
    && apk-install \
        python \
        python-dev \
        py-setuptools \
        py-crypto \
        py2-pip \
        py-cparser \
        py-cryptography \
        py-markupsafe \
        py-cffi \
        py-yaml \
        py-jinja2 \
        py-paramiko \
        openssh-client \
    && pip install --upgrade pip \
    && hash -r \
    && pip install --no-cache-dir saws \
    && chmod 750 /usr/bin/saws* \
    # Cleanup
    && apk del python-dev
{%- endmacro %}


{% macro centos() -%}
    # Install saws
    && yum-install \
        epel-release \
        PyYAML \
        python-jinja2 \
        python-httplib2 \
        python-keyczar \
        python-paramiko \
        python-setuptools \
        python-setuptools-devel \
        libffi \
        python-devel \
        libffi-devel \
        openssh-clients \
    && easy_install pip \
    && pip install --upgrade pip \
    && hash -r \
    && pip install --no-cache-dir saws \
    && chmod 750 /usr/bin/saws* \
    # Cleanup
    && yum erase -y python-devel
{%- endmacro %}


{% macro debian(distribution) -%}
    # Install saws
    && apt-install \
        # Install saws
        python-minimal \
        python-setuptools \
        python-pip \
        python-paramiko \
        python-jinja2 \
        python-dev \
        libffi-dev \
        libssl-dev \
        build-essential \
        openssh-client \
    && pip install --upgrade pip \
    && hash -r \
    && pip install --no-cache-dir saws \
    && chmod 750 /usr/local/bin/saws* \
    # Cleanup
    && apt-get purge -y -f --force-yes \
        python-dev \
        build-essential \
        libssl-dev \
        libffi-dev
{%- endmacro %}


